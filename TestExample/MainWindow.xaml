<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestExample"
        xmlns:Model="clr-namespace:TestExample.Model" x:Class="TestExample.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="rbOne" Grid.Row="0" Grid.Column="0" Content="Data1.xml" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="True" Margin="5,0,0,0" Checked="rbOne_Checked" />
        <RadioButton x:Name="rbTwo" Grid.Row="0" Grid.Column="0" Content="Data2.xml" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Checked="rbTwo_Checked" />
        <TextBlock HorizontalAlignment="Left" Margin="5,19,0,0" TextWrapping="Wrap" Text="Выберите файл:" VerticalAlignment="Top"/>
        <Button Grid.Row="0" Grid.Column="1" Content="Преобразовать" HorizontalAlignment="Center" VerticalAlignment="Center" Click="XmlTransform_Click"/>
        <TreeView x:Name="employeeTreeView" Grid.Row="1" Grid.ColumnSpan="2" Width="320" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=SalaryRecords}">
                    <TextBlock Text="{Binding Name}" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding InfoSalary}" />
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
